<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BmiApp" parent="Theme.MaterialComponents.NoActionBar">
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/skyBlue_800</item>
        <item name="colorPrimaryVariant">@color/skyBlue_800</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/eucalyptusGreen_300</item>
        <item name="colorSecondaryVariant">@color/eucalyptusGreen_300</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimary</item>
        <!-- Customize your theme here. -->
        <item name="colorOnSurface">@color/black_700</item>
    </style>

    <style name="Theme.BmiApp.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/white</item>
        <item name="postSplashScreenTheme">@style/Theme.BmiApp</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/bmi_logo_splash</item>
    </style>

    <style name="Style_HintTextAppearance" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="fontFamily">@font/poppins_light</item>
    </style>

    <style name="AppTheme.Picker" parent="Theme.AppCompat.Light.NoActionBar" >
        <item name="android:textColorPrimary">@color/skyBlue_800</item>
        <item name="android:textColorSecondary">@color/skyBlue_800</item>
        <item name="android:fontFamily">@font/poppins_bold</item>
    </style>

</resources>