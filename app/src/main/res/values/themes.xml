<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BmiApp" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/skyBlue_800</item>
        <item name="colorPrimaryVariant">@color/skyBlue_800</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/eucalyptusGreen_300</item>
        <item name="colorSecondaryVariant">@color/eucalyptusGreen_300</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Customize your theme here. -->
        <item name="colorOnSurface">@color/black_700</item>
        <item name="android:windowBackground">@drawable/gradient_0deg</item>
        <item name="android:statusBarColor">@color/transparent</item>

    </style>

    <style name="Theme.BmiApp.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/white</item>
        <item name="postSplashScreenTheme">@style/Theme.BmiApp</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/bmi_logo_splash</item>
    </style>

<!--    TEXT APPEARANCE STYLES-->
    <style name="TextAppearance" />

    <style name="TextAppearance.ToolbarTitle" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:fontFamily">@font/raleway_regular</item>
        <item name="fontFamily">@font/raleway_regular</item>
        <item name="android:textSize">@dimen/TextSize_Headline6</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextAppearance.AddDetailTitle" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:fontFamily">@font/raleway_regular</item>
        <item name="fontFamily">@font/raleway_regular</item>
        <item name="android:textSize">@dimen/TextSize_Headline5</item>
        <item name="android:textColor">@color/skyBlue_800</item>
    </style>

    <style name="TextAppearance.Input" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:fontFamily">@font/poppins_light</item>
        <item name="fontFamily">@font/poppins_light</item>
        <item name="android:textSize">@dimen/TextSize_Body1</item>
        <item name="android:textColor">@color/skyBlue_800</item>
    </style>

    <style name="TextAppearance.Caption" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:fontFamily">@font/poppins_light</item>
        <item name="fontFamily">@font/poppins_light</item>
        <item name="android:textSize">@dimen/TextSize_Caption</item>
        <item name="android:textColor">@color/black_400</item>
    </style>

    <style name="TextAppearance.Picker.Title" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:fontFamily">@font/poppins</item>
        <item name="fontFamily">@font/poppins</item>
        <item name="android:textSize">@dimen/TextSize_Body1</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextAppearance.ResultsHeading" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="android:fontFamily">@font/raleway_semibold</item>
        <item name="fontFamily">@font/raleway_semibold</item>
        <item name="android:textSize">@dimen/TextSize_Subtitle2</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextAppearance.BmiWholeNumber" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="android:fontFamily">@font/poppins</item>
        <item name="fontFamily">@font/poppins</item>
        <item name="android:textSize">@dimen/TextSize_Headline1</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextAppearance.BmiDecimal" parent="TextAppearance.MaterialComponents.Headline2">
        <item name="android:fontFamily">@font/poppins</item>
        <item name="fontFamily">@font/poppins</item>
        <item name="android:textSize">@dimen/TextSize_Headline2</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextAppearance.BmiMessage" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textSize">@dimen/TextSize_Body2</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextAppearance.BmiMessage.Primary" parent="TextAppearance.BmiMessage">
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="fontFamily">@font/poppins_bold</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="TextAppearance.BmiMessage.Secondary" parent="TextAppearance.BmiMessage">
        <item name="android:fontFamily">@font/raleway_regular</item>
        <item name="fontFamily">@font/raleway_regular</item>
    </style>

<!--    CARD VIEW STYLES-->

    <style name="CardView" parent="Widget.MaterialComponents.CardView"/>

    <style name="CardView.NumberPicker" parent="CardView">
        <item name="cardElevation">@dimen/CardElevation_PickerCard</item>
    </style>

<!--    NUMBER PICKER STYLES-->

    <style name="NumberPicker" parent="Theme.AppCompat.Light.NoActionBar" >
        <item name="android:textColorPrimary">@color/skyBlue_800</item>
        <item name="android:textColorSecondary">@color/skyBlue_800</item>
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="android:textSize">@dimen/TextSize_Body1</item>
    </style>

<!--    BUTTON STYLES-->

    <style name="Button" parent="TextAppearance.MaterialComponents.Button">
        <item name="backgroundTint">@null</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/TextSize_Button</item>
        <item name="iconTint">@null</item>
    </style>

    <style name="Button.ResultScreen" parent="Button">
        <item name="android:fontFamily">@font/raleway_regular</item>
        <item name="fontFamily">@font/raleway_regular</item>
        <item name="android:minHeight">@dimen/MinHeight_ResultScreenButton</item>
        <item name="android:background">@drawable/button_transparent_shape</item>
    </style>

    <style name="Button.Calculate" parent="Button">
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="fontFamily">@font/poppins_bold</item>
        <item name="android:background">@drawable/button_shape</item>
    </style>

<!--    TOOL BAR STYLES-->

    <style name="Toolbar" parent="Widget.MaterialComponents.Toolbar.Primary">
        <!-- Customize color of navigation drawer icon and back arrow -->
        <item name="colorControlNormal">@color/white</item>
        <item name="titleTextAppearance">@style/TextAppearance.ToolbarTitle</item>
    </style>

</resources>